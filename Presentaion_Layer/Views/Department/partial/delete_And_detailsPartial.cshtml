@model DepartmentDetailsToReturnDto
 
<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <!-- General Tab Content -->
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Code"></label>
                <input asp-for="Code" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Description"></label>
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="CreationDate"></label>
                <input asp-for="CreationDate" class="form-control" readonly />
            </div>

        </div>
    </div>

    <!-- Administration Tab Content -->
    <div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration-tab">
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="createdbt"></label>
            <input asp-for="createdbt" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="createdon"></label>
            <input asp-for="createdon" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedby"></label>
            <input asp-for="LastModifiedby" class="form-control" readonly />
        </div>
        <div class="form-group  col-12">
            <label class="col-form-label" asp-for="LastModifiedat"></label>
            <input asp-for="LastModifiedat" class="form-control" readonly />
        </div>
    </div>
    @if (ViewData["Title"] as string == "Details")
    {
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
        </div>
    }
    else
    {
        <div class="mt-4">
            <form method="post" asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a asp-action="Index" class="btn btn-outline-dark">Back To list</a>
            </form>
        </div>
    }